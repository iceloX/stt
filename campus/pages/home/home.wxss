/* 搜索框样式 */
.searchblank {
  width: 90%;
  height: 50rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #999999;
  margin: 2%;
  background-color: white;
  border-color: #999999;
  align-items: center;
  padding-left: 5%;
  display: flex;
  opacity: 0.7;
}

/* swiper样式 */
.swiperClass {
  margin: 0;
  margin-top: 10px;
}

/* swiper图片样式 */
.slide-image {
  width: 100%;
  height: 90%;
  border-radius: 10px;
  position: relative;
}

/* active状态的图片样式 */
image.active {
  transform: none;
  transition: all 0.2s ease-in 0s;
}

/* quiet状态的图片样式 */
image.quiet {
  transform: scale(0.8333333);
  transition: all 0.2s ease-in 0s;
}

/* card样式 */
.vantcard {
