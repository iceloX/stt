/* pages/personage/personage.wxss */
.card {
  box-shadow: 0 0 20pt 0 rgba(223, 223, 223, 0.5);
  transition: 0.3s;
  width: 80%;
  border-radius: 13pt;
  margin: 0 auto;
  margin-top: 25px;
  padding: 12px;
  background-color: white;
}

.card_info1 {
  font-size: 14px;
  font-weight: bold;
  color: #595959;
  vertical-align: middle;
  line-height: 30px;
  height: 30px;
}

.card_info2 {
  font-size: 12px;
  color: #999999;
  text-align: right;
  vertical-align: middle;
  line-height: 30px;
  height: 30px;
}

.card_info3 {
  color: #999999;
  text-align: right;
  vertical-align: middle;
}

.myavatar {
  width: 64px !important;
  height: 64px !important;
  background-color: #ffffff;
  background-size: cover;
  border: 1px solid #F8F8FF;
  border-radius: 9px;
}

.myinfo {
  margin-top: 12px;
}

/* 背景图块样式 */
.bkg-square {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 400rpx;
  position: absolute;
  z-index: -1;
  background-image: url(https://z3.ax1x.com/2021/05/07/g12kt0.jpg);
  background-repeat:no-repeat;
  background-size: contain;
}